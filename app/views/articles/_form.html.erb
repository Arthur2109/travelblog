<%= form_with(model: article) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group mr-20">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-input" %>
  </div>

  <div class="form-group mr-20">
    <%= form.label :topic, class: "form-label" %>
    <%= form.text_field :topic, class: "form-input" %>
  </div>

  <div class="mt-10">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image %>
  </div>

  <div class="mt-10">
    <%= form.label :contenu, class: "form-label" %>
    <%= form.rich_text_area :contenu %>
  </div>

  <div class="flex items-center justify-between flex-wrap mt-10">
    <div class="sm:flex-1 sm:mb-0 mb-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>

    <% if form.object.new_record? %>
      <%= link_to "Cancel", articles_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to "Cancel", article_path(@article), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
